<h1>Intake.</h1><hr>
<p>Monitor and improve your eating habits.</p>
<p><b>Intake</b> is a simple, <i>fast</i> webapp built to help you take control<br /> of your weight.</p>


<% if !session[:user_id] %>
  <button type="button" class="btn btn-outline-secondary btn-md" data-toggle="modal" data-target="#loginModal">Login</button>
  <button type="button" class="btn btn-outline-secondary btn-md" data-toggle="modal" data-target="#registerModal">Register</button>
<% end %>


<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-notify modal-warning" role="document">
    <!--Content-->
    <div class="modal-content">
      <!--Header-->
      <div class="modal-header text-center">
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">Login</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="white-text">&times;</span>
        </button>
      </div>

      <!--Body-->
      <div class="modal-body justify-content-center">
          <form class="form-horizontal" action="/sessions/new" method="POST">
          <fieldset>
          <div class="form-group">
            <label class="col-md-8 control-label" for="email">Email Address</label>
            <div class="col-md-8">
            <input id="email" name="email" type="email" class="form-control input-md" required="">
            </div>
          </div>
          <br>
          <!-- Password input-->
          <div class="form-group">
            <label class="col-md-8 control-label" for="password_plaintext">Password</label>
            <div class="col-md-8">
              <input id="password_plaintext" name="password_plaintext" type="password" placeholder="" class="form-control input-md" required="">
            </div>
          </div>
      <!--Footer-->
      <div class="modal-footer justify-content-center">
        <div class="form-group">
          <label class="col-md-4 control-label" for="register"></label>
          <div class="col-md-4">
            <center><button id="login" name="login" class="btn btn-primary">Login</button></center>
          </div>
        </div>
        </fieldset>
        </form>
      </div>
    </div>
    <!--/.Content-->
  </div>
</div>

<!-- Register Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-notify modal-warning" role="document">
    <!--Content-->
    <div class="modal-content">
      <!--Header-->
      <div class="modal-header text-center">
        <h4 class="modal-title white-text w-100 font-weight-bold py-2">Register</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="white-text">&times;</span>
        </button>
      </div>

      <!--Body-->
      <div class="modal-body">
          <form class="form-horizontal" action="/users/new" method="POST">
          <fieldset>
          <div class="form-group justify-content-center">
            <label class="col-md-8 control-label" for="name">Name</label>
            <div class="col-md-8">
            <input id="name" name="name" type="text" value="<%= @user.try(:name) %>" class="form-control input-md" required="">
            </div>
          </div>
          <br>
          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-8 control-label" for="email">Email Address</label>
            <div class="col-md-8">
            <input id="email" name="email" type="email" value="<%= @user.try(:email) %>" class="form-control input-md" required="">
            </div>
          </div>
          <br>
          <!-- Password input-->
          <div class="form-group">
            <label class="col-md-8 control-label" for="password_plaintext">Password</label>
            <div class="col-md-8">
              <input id="password_plaintext" name="password_plaintext" type="password" class="form-control input-md" required="">
            </div>
          </div>
      <!--Footer-->
      <div class="modal-footer justify-content-center">
       <div class="form-group">
          <label class="col-md-8 control-label" for="register"></label>
          <div class="col-md-8">
            <center><button id="register" name="register" class="btn btn-primary">Register</button></center>
          </div>
        </div>
        </fieldset>
        </form>
      </div>
    </div>
    <!--/.Content-->
  </div>
</div>